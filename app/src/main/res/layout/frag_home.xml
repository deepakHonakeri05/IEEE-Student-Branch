<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/MYBG">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:id="@+id/nested"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_margin="20dp"
                    android:textSize="25sp"
                    android:textStyle="italic"
                    android:text="Dashboard"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calender"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="15dp"/>


                <android.support.v7.widget.CardView
                    android:id="@+id/calenderCV"
                    android:transitionName="calender"
                    app:cardElevation="12dp"
                    app:cardCornerRadius="23dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/calenderIV"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/cal"/>

                        <TextView

                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Have seen our new Calender? Checkout the calender of events."/>

                        <TextView
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="10dp"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap for More!"
                            android:textColor="@android:color/black"
                            android:textStyle="italic"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="15dp"/>


                <android.support.v7.widget.CardView
                    app:cardElevation="12dp"
                    app:cardCornerRadius="23dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/teamLL"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/team"/>

                        <TextView
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Have you met our team yet? If not, what are you waiting for?"/>

                        <TextView
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="10dp"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap for More!"
                            android:textColor="@android:color/black"
                            android:textStyle="italic"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gallery"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="15dp"/>


                <android.support.v7.widget.CardView
                    android:id="@+id/galleryCV"
                    app:cardElevation="12dp"
                    app:cardCornerRadius="23dp"
                    android:transitionName="gallery"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/galleryIV"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/gallery"/>

                        <TextView
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Our new Gallery"/>

                        <TextView
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="10dp"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap for More!"
                            android:textColor="@android:color/black"
                            android:textStyle="italic"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memberships"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="15dp"/>


                <android.support.v7.widget.CardView
                    app:cardElevation="12dp"
                    app:cardCornerRadius="23dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/membershipLL"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/member"/>

                        <TextView
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Scrolled all the way down? Do not leave without taking the annual IEEE membership"/>

                        <TextView
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="10dp"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap for More!"
                            android:textColor="@android:color/black"
                            android:textStyle="italic"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
