<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="15dp"/>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/highlight_CV"
            android:padding="15dp">

            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IEEE Club"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/highlight_name"
                    android:gravity="left"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>
                <TextView
                    android:layout_margin="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/about_ieee"
                    android:id="@+id/highlight_info"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="15dp"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/call_LV"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:src="@android:drawable/ic_menu_call"
                                android:tint="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/callTV"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Call us :"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                    <TextView
                        android:textSize="10dp"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to Contact!"
                        android:textColor="@android:color/black"
                        android:textStyle="italic"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mail_CV"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:src="@android:drawable/ic_dialog_email"
                                android:tint="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/clgEmailTV"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email :"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <TextView
                        android:textSize="10dp"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to Contact!"
                        android:textColor="@android:color/black"
                        android:textStyle="italic"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/feedbackButton"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:src="@android:drawable/ic_dialog_email"
                                android:tint="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/feedBackTV"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FeedBack :"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <TextView
                        android:textSize="10dp"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to Contact!"
                        android:textColor="@android:color/black"
                        android:textStyle="italic"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rateButton"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:src="@drawable/star"
                            android:tint="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate our App !"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>
                    <TextView
                        android:textSize="10dp"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap for More!"
                        android:textColor="@android:color/black"
                        android:textStyle="italic"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="22sp"
            android:text="Account Settings"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical">

             <TextView
                 android:id="@+id/resetPwdTV"
                 android:padding="20dp"
                 android:textSize="15sp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Change Password"
                 android:textColor="@android:color/black" />

             <TextView
                 android:id="@+id/deleteAccountTV"
                 android:padding="20dp"
                 android:textSize="15sp"
                 android:textColor="@android:color/black"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Delete Account"/>
             </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center"
            android:background="#E07419"
            android:text="Log out"
            android:textColor="@android:color/white"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/loggedInAs"
            android:layout_marginBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="You are Logged in"/>

    </LinearLayout>

</ScrollView>