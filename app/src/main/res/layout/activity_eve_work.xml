<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/eventIV"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="20dp"/>


        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Description "
            android:textSize="18sp"/>


        <android.support.v7.widget.CardView
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/eventDescTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="15dp"
                android:textSize="16sp"/>


        </android.support.v7.widget.CardView>

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/linkPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="Register with the below link right away"
            android:textSize="18sp"/>

        <android.support.v7.widget.CardView
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="10dp"
                android:id="@+id/eventRegisterTV"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://docs.google.com/forms/d/1BQdwFgT1Mrjes3zS6AQCvW8DuTWygWRdFUNoKt1qYWY/edit"
                android:textColor="@android:color/holo_blue_light"/>

        </android.support.v7.widget.CardView>


        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/contactPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="Contact Us : "
            android:textSize="18sp"/>

        <android.support.v7.widget.CardView
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                    <TextView
                        android:id="@+id/call1"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call us : +91 9456411806"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>


                    <TextView
                        android:id="@+id/call2"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email : ieeepesitsouth@gmail.com"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>


                    <TextView
                        android:id="@+id/call3"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate our App!"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="Participate and win exciting cash prizes and goodies!"/>


    </LinearLayout>
</ScrollView>